#include <stdio.h>
#include <unistd.h>

void ft_putchar(char c)
{
	write(1, &c, 1);
}

int ft_iterative_factorial(int nb)
{
	if ( nb > 1)
	{
		nb = nb * ft_iterative_function(nb - 1);
		return (1);
	}
	else
	{
		return (0);
	}
