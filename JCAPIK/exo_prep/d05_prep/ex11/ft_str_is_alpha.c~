int		ft_str_is_alpha(char *str)
{
	int i;

	i = 0;
	while (str[i] != '\0')
	{
		if ((str[i] > 123 && str[i] < 97) or (str[i] > 90 && str[i] < 65))
			return (0);
		i++;
	}
}
