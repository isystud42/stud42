#include <stdio.h>
#include <unistd.h>

void	ft_putchar(char c)
{
	write(1, &c, 1);
	return ;
}

int	ft_strlen(char *str)
{
	int i;

	i = 0;
	while (*(str + i) != '\n')
	{
		i += 1;
	}
	return (i);
}

char	*ft_strrev(char *str)
{
	int  i;
	i = ft_strlen(*str);

	const int k = i;

	i = ft_strlen(*str);
	int  cpt;

	cpt = 0;
	char lol = *str;

	while (cpt < i)
	{	
		str[cpt] = lol[i];
		cpt += 1;
		i += -1;
	}
	return (&*str);
}

int		main(void)
{
	ft_strrev("abc");
	return (0);
}
